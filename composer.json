        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-fileinfo": "*",
        "ext-json": "*",
        "amphp/amp": "^2.0",
        "amphp/byte-stream": "^1.2.5",
        "amphp/socket": "^1",
        "jean85/pretty-package-versions": "^2.0",
        "psr/log": ">=2.0",
        "symfony/console": ">=4.1"
    },
    "require-dev": {
        "amphp/dns": "^1",
        "amphp/http-client": "^4",
        "amphp/parallel": "^1.0.1",
        "amphp/process": "^1.0.3",
        "phpunit/php-code-coverage": ">=9.0",
        "phpunit/phpcov": ">=5.0",
        "phpunit/phpunit": ">=7.5"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Ostrolucky\\Stdinho\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ostrolucky\\Stdinho\\Tests\\": "tests"
        }
    },
    "bin": [
        "bin/stdinho"
    ]
